<!-- Product page template showcasing DaisyUI components -->
<div class="t-min-h-screen t-bg-base-200">
  <div class="t-container t-mx-auto t-px-4 t-py-8">
    <!-- Breadcrumb -->
    <div class="t-text-sm t-breadcrumbs t-mb-6">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/collections">Products</a></li>
        <li class="t-text-base-content">{{ product.title }}</li>
      </ul>
    </div>

    <!-- Product Hero Section -->
    <div class="d-card t-bg-base-100 t-shadow-xl t-mb-8">
      <div class="t-card-body">
        <div class="t-grid t-grid-cols-1 t-lg-grid-cols-2 t-gap-8">
          <!-- Product Images -->
          <div class="t-space-y-4">
            {% if product.featured_image %}
              <div class="t-carousel t-w-full">
                <div class="t-carousel-item t-w-full">
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.title }}"
                    width="600"
                    height="600"
                    class="t-w-full t-object-cover"
                  >
                </div>
                {% for image in product.images offset: 1 limit: 3 %}
                  <div class="t-carousel-item t-w-full">
                    <img
                      src="{{ image | image_url: width: 600 }}"
                      alt="{{ product.title }}"
                      width="600"
                      height="600"
                      class="t-w-full t-object-cover"
                    >
                  </div>
                {% endfor %}
              </div>
              {% if product.images.size > 1 %}
                <div class="t-flex t-justify-center t-w-full t-py-2 t-gap-2">
                  <a href="#item1" class="t-btn t-btn-xs">1</a>
                  {% for image in product.images offset: 1 limit: 3 %}
                    <a href="#item{{ forloop.index | plus: 1 }}" class="t-btn t-btn-xs">
                      {{- forloop.index | plus: 1 -}}
                    </a>
                  {% endfor %}
                </div>
              {% endif %}
            {% endif %}

            <!-- Thumbnail indicators -->
            <div class="t-flex t-justify-center t-space-x-2">
              {% for image in product.images limit: 4 %}
                <div class="t-avatar">
                  <div class="t-w-16 t-rounded">
                    <img src="{{ image | image_url: width: 64 }}" alt="thumbnail" width="64" height="64">
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>

          <!-- Product Info -->
          <div class="t-space-y-6">
            <!-- Vendor Badge -->
            <div class="d-badge d-badge-primary t-text-xs">{{ product.vendor }}</div>

            <!-- Title -->
            <h1 class="t-text-3xl t-font-bold t-text-base-content">{{ product.title }}</h1>

            <!-- Price -->
            <div class="t-flex t-items-center t-space-x-4">
              <div class="t-text-3xl t-font-bold t-text-primary">
                {{ product.price | money }}
              </div>
              {% if product.compare_at_price %}
                <div class="t-text-xl t-line-through t-text-base-content/60">
                  {{ product.compare_at_price | money }}
                </div>
                <div class="d-badge d-badge-error">
                  -
                  {{-
                    product.compare_at_price
                    | minus: product.price
                    | times: 100.0
                    | divided_by: product.compare_at_price
                    | round
                  -}}
                  %
                </div>
              {% endif %}
            </div>

            <!-- Rating -->
            <div class="t-flex t-items-center t-space-x-2">
              <div class="t-rating">
                {% for i in (1..5) %}
                  <input
                    type="radio"
                    name="rating-1"
                    class="t-mask t-mask-star"
                    {% if i == 4 %}
                      checked
                    {% endif %}
                  >
                {% endfor %}
              </div>
              <span class="t-text-sm t-text-base-content/70">(4.5/5 - 128 reviews)</span>
            </div>

            <!-- Variant Selector -->
            {% if product.variants.size > 1 %}
              <div class="t-form-control">
                <label class="t-label">
                  <span class="t-label-text">Size</span>
                </label>
                <select class="d-select d-select-bordered t-w-full">
                  {% for variant in product.variants %}
                    <option value="{{ variant.id }}">{{ variant.title }}</option>
                  {% endfor %}
                </select>
              </div>
            {% endif %}

            <!-- Quantity Selector -->
            <div class="t-form-control">
              <label class="t-label">
                <span class="t-label-text">Quantity</span>
              </label>
              <div class="t-flex t-items-center t-space-x-4">
                <div class="t-join">
                  <button class="d-btn d-btn-outline t-join-item">-</button>
                  <input
                    type="number"
                    class="d-input d-input-bordered t-join-item t-w-20 t-text-center"
                    value="1"
                    min="1"
                  >
                  <button class="d-btn d-btn-outline t-join-item">+</button>
                </div>
              </div>
            </div>

            <!-- Add to Cart Button -->
            <div class="t-flex t-space-x-4">
              <button class="d-btn d-btn-primary t-flex-1">
                <svg class="t-w-5 t-h-5 t-mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.1 5H19M7 13v8a2 2 0 002 2h10a2 2 0 002-2v-3"></path>
                </svg>
                Add to Cart
              </button>
              <button class="d-btn d-btn-outline">
                <svg class="t-w-5 t-h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </button>
            </div>

            <!-- Stock Status -->
            <div class="d-alert d-alert-success">
              <svg class="t-w-6 t-h-6 t-shrink-0 t-stroke-current" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>In stock - Ships within 24 hours</span>
            </div>

            <!-- Share Buttons -->
            <div class="t-flex t-space-x-2">
              <button class="d-btn d-btn-ghost d-btn-sm">
                <svg class="t-w-4 t-h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                </svg>
              </button>
              <button class="d-btn d-btn-ghost d-btn-sm">
                <svg class="t-w-4 t-h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.75.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.746-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-11.987C24.007 5.367 18.641.001.012.017z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Product Details Tabs -->
    <div class="d-card t-bg-base-100 t-shadow-xl">
      <div class="t-card-body">
        <div class="t-tabs t-tabs-boxed t-mb-6">
          <a class="t-tab t-tab-active" data-tab="description">Description</a>
          <a class="t-tab" data-tab="specifications">Specifications</a>
          <a class="t-tab" data-tab="reviews">Reviews</a>
          <a class="t-tab" data-tab="shipping">Shipping</a>
        </div>

        <!-- Tab Content -->
        <div id="description" class="t-tab-content">
          <div class="t-prose t-max-w-none">
            {{ product.description }}
          </div>
        </div>

        <div id="specifications" class="t-tab-content t-hidden">
          <div class="t-overflow-x-auto">
            <table class="t-table t-table-zebra t-w-full">
              <thead>
                <tr>
                  <th>Specification</th>
                  <th>Value</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Material</td>
                  <td>Premium Quality</td>
                </tr>
                <tr>
                  <td>Dimensions</td>
                  <td>10" x 8" x 2"</td>
                </tr>
                <tr>
                  <td>Weight</td>
                  <td>1.5 lbs</td>
                </tr>
                <tr>
                  <td>Warranty</td>
                  <td>1 Year</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div id="reviews" class="t-tab-content t-hidden">
          <div class="t-space-y-4">
            <div class="d-card t-bg-base-200">
              <div class="t-card-body">
                <div class="t-flex t-items-center t-space-x-4">
                  <div class="t-avatar">
                    <div class="t-w-12 t-rounded-full">
                      <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=John" alt="User" width="48" height="48">
                    </div>
                  </div>
                  <div>
                    <h4 class="t-font-bold">John Doe</h4>
                    <div class="t-rating t-rating-sm">
                      <input type="radio" name="rating-2" class="t-mask t-mask-star-2" checked>
                      <input type="radio" name="rating-2" class="t-mask t-mask-star-2" checked>
                      <input type="radio" name="rating-2" class="t-mask t-mask-star-2" checked>
                      <input type="radio" name="rating-2" class="t-mask t-mask-star-2" checked>
                      <input type="radio" name="rating-2" class="t-mask t-mask-star-2" checked>
                    </div>
                  </div>
                </div>
                <p class="t-mt-4">
                  Excellent product! Highly recommend. The quality is outstanding and it arrived quickly.
                </p>
              </div>
            </div>
          </div>
        </div>

        <div id="shipping" class="t-tab-content t-hidden">
          <div class="t-space-y-4">
            <div class="d-alert d-alert-info">
              <svg class="t-w-6 t-h-6 t-shrink-0 t-stroke-current" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="t-font-bold">Free Shipping</h3>
                <div class="t-text-xs">Orders over $50 qualify for free shipping</div>
              </div>
            </div>
            <p>Ships within 1-2 business days. International shipping available.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Tab functionality
    const tabs = document.querySelectorAll('.t-tab');
    const tabContents = document.querySelectorAll('.t-tab-content');

    tabs.forEach((tab) => {
      tab.addEventListener('click', function (e) {
        e.preventDefault();

        // Remove active class from all tabs
        tabs.forEach((t) => t.classList.remove('t-tab-active'));

        // Hide all tab content
        tabContents.forEach((content) => content.classList.add('t-hidden'));

        // Add active class to clicked tab
        this.classList.add('t-tab-active');

        // Show corresponding tab content
        const tabName = this.getAttribute('data-tab');
        const targetContent = document.getElementById(tabName);
        if (targetContent) {
          targetContent.classList.remove('t-hidden');
        }
      });
    });
  });
</script>

